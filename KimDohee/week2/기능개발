function solution(progresses, speeds) {
    // "ë’¤ì˜ ê¸°ëŠ¥ì€ ì•ì˜ ê¸°ëŠ¥ì´ ë°°í¬ë  ë•Œ í•¨ê»˜ ë°°í¬ë˜ì–´ì•¼ í•œë‹¤" = "ì•ì˜ ê¸°ëŠ¥ì´ ë’¤ì˜ ê¸°ëŠ¥ë³´ë‹¤ ë¨¼ì € ì™„ë£Œë˜ì–´ì•¼ í•œë‹¤"
    // ê°ê¸°ëŠ¥ì˜ ë°°í¬ì˜ˆì •ì¼ì„ ë¯¸ë¦¬ êµ¬í–ˆë‹¤ê°€ ë°°í¬ì¼ì´ ë˜ì—ˆì„ ë•Œ ëª‡ê°œì˜ ì‘ì—…ì´ ì™„ë£Œë˜ì—ˆëŠ”ì§€ ë³´ëŠ” ë°©ë²•

    var answer = [];

    // ê° ê¸°ëŠ¥ ì™„ë£Œê¹Œì§€ í•„ìš”í•œ ì¼ìˆ˜ ê³„ì‚°
    const days = progresses.map((progress, i) => {
        const remaining = 100 - progress;  // ë‚¨ì€ ì‘ì—…ëŸ‰
        return Math.ceil(remaining / speeds[i])
    });

    console.log('ê° ê¸°ëŠ¥ë³„ ì™„ë£Œ ì¼ìˆ˜:', days);

    // ğŸ’¥ ë°°í¬ ê·¸ë£¹ ë§Œë“¤ê¸°
    let i = 0;
    while (i < days.length) {
        let count = 1;  // í˜„ì¬ ê¸°ëŠ¥ í¬í•¨
        let currentDay = days[i];  // í˜„ì¬ ë°°í¬ì¼

        // í˜„ì¬ ë°°í¬ì¼ê¹Œì§€ ì™„ë£Œë˜ëŠ” ë’¤ì˜ ê¸°ëŠ¥ë“¤ ì°¾ê¸°
        while (i + count < days.length && days[i + count] <= currentDay) {
            count++;
        }

        answer.push(count);
        i += count;  // ë‹¤ìŒ ë°°í¬ ê·¸ë£¹ìœ¼ë¡œ ì´ë™
    }
    return answer;
}
